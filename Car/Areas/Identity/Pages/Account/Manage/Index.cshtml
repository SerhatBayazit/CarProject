@page
@model IndexModel
@{
    ViewData["Title"] = "Profil Bilgileri";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    .profile-wrapper {
        max-width: 500px;

        background-color: #fff;
        padding: 35px;
        border-radius: 20px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    .profile-title {
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 25px;
        color: #222;
        text-align: center;
    }

    .form-group label {
        font-weight: 500;
        margin-bottom: 5px;
    }

    .form-control:disabled {
        background-color: #f1f1f1;
    }

    .btn-save {
        background-color: #0d6efd;
        border: none;
        padding: 12px;
        width: 100%;
        border-radius: 10px;
        color: white;
        font-weight: 600;
        transition: 0.3s;
    }

        .btn-save:hover {
            background-color: #084dca;
        }

    .form-icon {
        margin-right: 8px;
        color: #0d6efd;
    }
</style>

<div class="profile-wrapper">
    <div class="profile-title">Profil Bilgileri</div>

    <form method="post">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <!-- E-posta -->
        <div class="form-group mb-4">
            <label><i class="bi bi-person-circle form-icon"></i> E-posta (Kullanıcı Adı)</label>
            <input asp-for="Username" class="form-control" disabled />
        </div>

        <!-- Telefon Numarası -->
        <div class="form-group mb-4">
            <label asp-for="Input.PhoneNumber"><i class="bi bi-telephone form-icon"></i> Telefon Numarası</label>
            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="05xx xxx xx xx" />
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-save">Güncelle</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
