@page
@model TwoFactorAuthenticationModel
@{
    ViewData["Title"] = "İki Aşamalı Doğrulama";
}
<style>
    .profile-wrapper {
        max-width: 500px;
        background-color: #fff;
        padding: 35px;
        border-radius: 20px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);

    }

    .profile-title {
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 25px;
        color: #222;
        text-align: center;
    }
</style>

<div class="profile-wrapper">
    <div class="profile-title">İki Aşamalı Doğrulama</div>

    <p>İki aşamalı kimlik doğrulama hesabınız için ekstra güvenlik sağlar.</p>

    <form method="post">
        @if (Model.Is2faEnabled)
        {
            <div class="mb-3 text-success"><i class="bi bi-check-circle-fill"></i> İki aşamalı doğrulama etkin.</div>
            <button type="submit" asp-page-handler="Disable2fa" class="btn-save">Devre Dışı Bırak</button>
        }
        else
        {
            <div class="mb-3 text-danger"><i class="bi bi-x-circle-fill"></i> İki aşamalı doğrulama etkin değil.</div>
            <button type="submit" asp-page-handler="Enable2fa" class="btn-save">Etkinleştir</button>
        }
    </form>
</div>
