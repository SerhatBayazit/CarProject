@page
@model Car.Pages.Cars.EditModel

@{
    ViewData["Title"] = "Araç Düzenle";
}
<style>
    .düzenleme{
        margin-bottom:10%;
    }
</style>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container düzenleme mt-5 ">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">✏️ Araç Bilgilerini Düzenle</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Car.Id" />

                        <div class="mb-3">
                            <label asp-for="Car.Brand" class="form-label">Marka</label>
                            <input asp-for="Car.Brand" class="form-control" />
                            <span asp-validation-for="Car.Brand" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Car.Model" class="form-label">Model</label>
                            <input asp-for="Car.Model" class="form-control" />
                            <span asp-validation-for="Car.Model" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Car.Year" class="form-label">Yıl</label>
                            <input asp-for="Car.Year" class="form-control" />
                            <span asp-validation-for="Car.Year" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Car.Color" class="form-label">Renk</label>
                            <input asp-for="Car.Color" class="form-control" />
                            <span asp-validation-for="Car.Color" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Car.DailyPrice" class="form-label">Günlük Fiyat</label>
                            <input asp-for="Car.DailyPrice" class="form-control" type="number" step="1" min="0"
                                   value="@Model.Car.DailyPrice.ToString("F0", System.Globalization.CultureInfo.InvariantCulture)" />
                            <span asp-validation-for="Car.DailyPrice" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Car.Description" class="form-label">Açıklama</label>
                            <input asp-for="Car.Description" class="form-control" />
                            <span asp-validation-for="Car.Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-page="./Index" class="btn btn-secondary">← Listeye Geri Dön</a>
                            <input type="submit" value="Kaydet" class="btn btn-warning text-white" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
